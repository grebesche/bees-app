<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.vaadin.components.gwt.polymer.client.widget">

  <ui:style>
    .myButton {
      background-color: #4285f4;
      color: #FFFFFF;
    }
  </ui:style>

  <g:HTMLPanel>
    <div>
      <widget:PaperButton ui:field="myPaperButton" raised="" addStyleNames="{style.myButton}">Coucou from HML</widget:PaperButton>
      Hello, <span ui:field='nameSpan'/>.
    </div>
  </g:HTMLPanel>
</ui:UiBinder>